run = "bash start.sh"
modules = ["nodejs-20", "web", "python-3.11"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Dev Server"

[[workflows.workflow]]
name = "Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash scripts/dev.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8001
externalPort = 3000
exposeLocalhost = true

[[ports]]
localPort = 33673
externalPort = 3002

[[ports]]
localPort = 34685
externalPort = 3001

[nix]
channel = "stable-25_05"

[agent]
expertMode = true

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "export DATABASE_URL='file:./dev.db' && export SQLITE_DATABASE_URL='file:./dev.db' && export PY_AI_BASE_URL='http://127.0.0.1:8001' && cd apps/web && npx prisma migrate deploy --schema=prisma/schema.prisma && python -m uvicorn ../../services/ai/main:app --host 127.0.0.1 --port 8001 & node dist/src/index.js"]
build = ["bash", "-c", "pip install -r services/ai/requirements.txt && cd apps/web && npm ci && npm run prisma:generate && npm run build"]
